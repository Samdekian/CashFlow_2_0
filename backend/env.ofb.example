# Open Finance Brasil Configuration
# Copy this file to .env and fill in your actual values

# Enable Open Finance Brasil integration
OFB_ENABLED=true

# Client Registration (obtain from Open Finance Brasil)
OFB_CLIENT_ID=your_client_id_here
OFB_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URI
OFB_REDIRECT_URI=http://localhost:3000/ofb/callback

# Environment Mode
OFB_SANDBOX_MODE=true  # Set to false for production
OFB_MOCK_MODE=true     # Set to false for production

# API Endpoints (usually don't need to change)
OFB_AUTH_BASE_URL=https://auth.sandbox.openfinancebrasil.org.br
OFB_API_BASE_URL=https://api.sandbox.openfinancebrasil.org.br
OFB_DIRECTORY_URL=https://directory.sandbox.openfinancebrasil.org.br

# Certificate Paths (relative to backend directory)
OFB_TRANSPORT_CERT_PATH=certs/transport.pem
OFB_TRANSPORT_KEY_PATH=certs/transport.key
OFB_SIGNING_CERT_PATH=certs/signing.pem
OFB_SIGNING_KEY_PATH=certs/signing.key
OFB_CA_BUNDLE_PATH=certs/ca-bundle.pem

# Security Settings
OFB_REQUEST_TIMEOUT=30
OFB_MAX_RETRIES=3

# Rate Limiting
OFB_RATE_LIMIT_REQUESTS=100
OFB_RATE_LIMIT_WINDOW=60

# Monitoring
OFB_ENABLE_METRICS=true
OFB_METRICS_ENDPOINT=/metrics

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
